<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    tools:showIn="@layout/app_bar_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




            <ImageView
                android:id="@+id/menu_image"
                android:scaleType="centerCrop"
                android:background="@drawable/maintop"
                android:layout_width="match_parent"
                android:layout_height="300dp" />


            <TextView
                android:id="@+id/menu_name"
                android:text="PCOS CURE: 18 EFFECTIVE YOGA POSES FOR PCOS TREATMENT"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="#4f0e0d0e"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />





        <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_menu2"
        android:scrollbars="horizontal"
            android:layout_below="@+id/maintop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_menu"
        android:scrollbars="vertical"
        android:layout_below="@+id/recycler_menu2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>